<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D8B1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="@string/maintitle"
        android:textColor="#CF1313"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <Button
            android:id="@+id/cp_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74BC21"
            android:fontFamily="@font/baloo"
            android:onClick="startCP"
            android:text="@string/catchtitle"
            android:textSize="24sp" />

        <Button
            android:id="@+id/pict_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:fontFamily="@font/baloo"
            android:onClick="startPic"
            android:text="@string/pictitle"
            android:textSize="24sp" />

        <Button
            android:id="@+id/fish_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:fontFamily="@font/baloo"
            android:onClick="startFB"
            android:text="@string/fishbowl"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_makedatabase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F32121"
            android:fontFamily="@font/baloo"
            android:onClick="startDB"
            android:text="CREATE WORD DATABASE"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>